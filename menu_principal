#include <stdio.h>

int main() {

	int opcion;

	do{
		printf("\t*******MENU*******\n");
		printf("Introduce una opción\n");
		printf("1-Medir la deformación\n");
		printf("2-Medir el peso del objeto\n");
		printf("3-Tara a cero\n");
		printf("4-Salir del menu\n");
		scanf_s("%d", &opcion);

		switch (opcion) {

			case 1:

				break;

			case 2:

				break;

			case 3:

				break;

			default:
				printf("Opcion inexistente\n");
		
		}
		
	}while(opcion!=4);
	

}
